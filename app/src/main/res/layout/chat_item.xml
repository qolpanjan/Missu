<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/chat_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <com.missu.View.RoundAngleImageView
            android:id="@+id/img_chat_profile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:roundWidth="2dp"
            app:roundHeight="2dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/icon" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chat_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:text="聊天用户名称"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_last_chat_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:textColor="#555"
                android:ellipsize="end"
                android:text="聊天内容"
                android:textSize="15sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv__last_chat_time"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="下午 13:37" />


    </LinearLayout>

</LinearLayout>