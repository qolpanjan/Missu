<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.missu.Activitys.ChangePassActivity">


        <EditText
            android:id="@+id/et_changepass_oldpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入原来的的的密码"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/et_changepass_newpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text"
            android:hint="请输入新密码"/>

    <EditText
        android:id="@+id/et_changepass_confirmpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:inputType="textPassword"
        android:background="@android:drawable/edit_text"
        android:hint="请确认新密码"/>

    <Button
        android:id="@+id/btn_changepass_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:text="确认"/>



</LinearLayout>
